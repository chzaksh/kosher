<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<section class="page-section portfolio page-section bg-primary text-white mb-0">
    <div class="container">
        
        <form id="add-post-new"  method="POST">
            <div class="form-group">
                <h2 class="h2">add post your own</h2>

                <input type="text" name="title" value="" placeholder="type here your title" id="title">
                <br>
                <label for="post_new">add new post:</label>
                <textarea class="form-control" name="content" id="post_new">

            </textarea>
           
            </div>
           <button type="submit" class="btn btn-primary mb-2" id="submit">submit</button>
        </form> 
        
    </div>


    <div class="container flex">
        <h1 class="masthead-heading mb-0"><%=title%></h1>
        <div class="butons">
            <button id="add-post" type="button" class="btn btn-success">add posts</button>
            <button id="delete-post" type="button" class="btn btn-danger">delete posts</button>
        </div>



        <%for (let i in content){%>
        <div class="text-center post_box">
            <h2 class="h2"><%=content[i].title%></h2>


            <p class="mb-5"><%=content[i].text%>
            </p> <a href="/posts/<%= content[i]._id%>">קרא עוד</a>
            <button class="delete-me btn btn-info" id="<%= content[i]._id%>" type="button" class="btn btn-info">delete
                me</button>
        </div>


        <%}%>


        
 </div>
</section>
<%- include('../partials/footer') %>